<script>
    function createKamar() {
        var data = {
            nomorkamar: $('#nomorkamar').val(),
            jeniskamar: $('#jeniskamar').val(),
            kapasitas: $('#kapasitas').val(),
            harga: $('#harga').val()
        };

        $.ajax({
            url: 'http://localhost:8080/kamars/create',
            type: 'POST',
            data: JSON.stringify(data),
            contentType: 'application/json',
            success: function (result) {
                alert('Kamar berhasil dibuat!');
                // Kode penanganan kesuksesan tambahan di sini
            },
            error: function (error) {
                alert('Kesalahan dalam membuat kamar!');
                // Kode penanganan kesalahan tambahan di sini
            }
        });
    }
</script>

    <!-- Script and jQuery CDN remain the same -->
