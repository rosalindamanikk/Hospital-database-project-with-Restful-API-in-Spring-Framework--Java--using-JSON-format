<body>
    <div class="form-container">
        <h2>Edit Kamar</h2>
        <form id="kamarForm" method="POST">
            <label for="nomorKamar">Nomor Kamar:</label>
            <input type="text" id="nomorKamar" name="nomorKamar" value="30" required><br>

            <label for="jenisKamar">Jenis Kamar:</label>
            <input type="text" id="jenisKamar" name="jenisKamar" value="extrasmall" required><br>

            <label for="kapasitas">Kapasitas:</label>
            <input type="text" id="kapasitas" name="kapasitas" value="20" required><br>

            <label for="harga">Harga:</label>
            <input type="text" id="harga" name="harga" value="20" required><br>

            <button type="button" onclick="updateKamar()">Simpan Perubahan</button>
        </form>
    </div>

    <script>
        function updateKamar() {
            var id = 4; // Assuming the ID is 4 as in the provided data

            // Retrieve values from the form
            var nomorKamar = document.getElementById("nomorKamar").value;
            var jenisKamar = document.getElementById("jenisKamar").value;
            var kapasitas = document.getElementById("kapasitas").value;
            var harga = document.getElementById("harga").value;

            // Send the AJAX request
            $.ajax({
                url: 'http://localhost:8080/kamar/' + id,
                type: 'PUT',
                data: JSON.stringify({
                    id: id,
                    nomorKamar: nomorKamar,
                    jenisKamar: jenisKamar,
                    kapasitas: kapasitas,
                    harga: harga
                }),
                contentType: 'application/json',
                success: function (result) {
                    // Handle the success response here
                    console.log("Data updated successfully");
                },
                error: function (error) {
                    // Handle the error response here
                    console.error("Error updating data:", error);
                }
            });
        }
    </script>
</body>

