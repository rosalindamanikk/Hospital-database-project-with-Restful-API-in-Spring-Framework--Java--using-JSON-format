package com.springboot.restfulwebservice.service;


import com.springboot.restfulwebservice.model.Kamar;
import com.springboot.restfulwebservice.model.User;
import com.springboot.restfulwebservice.repository.KamarRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;
import java.util.NoSuchElementException;

@Service
public class KamarService {
    private final KamarRepository kamarRepository;

    @Autowired
    public KamarService(KamarRepository kamarRepository) {
        this.kamarRepository = kamarRepository;
    }

    public List<Kamar> getAllProduk() {
        return kamarRepository.findAll();
    }

    public Kamar getKamarById(Long id) {
        return kamarRepository.findById(id).orElseThrow(NoSuchElementException::new);
    }

    public Kamar createKamar(Kamar kamar) {
        return kamarRepository.save(kamar);
    }

    public Kamar updateKamar(Long id, Kamar updatedKamar) {
        Kamar existingKamar = getKamarById(id);
        updatedKamar.setId(existingKamar.getId()); // Pastikan ID tidak berubah
        return kamarRepository.save(updatedKamar);
    }

    public void deleteKamar(Long id) {
    	kamarRepository.deleteById(id);
    }

}
