<body>
    <div class="form-container">
        <h2>Edit Kamar</h2>
        <form id="updateForm" th:action="@{/kamars/edit/{id}(id=${kamar.id})}" method="PUT">

            <label for="nomorKamar">Nomor Kamar:</label>
            <input type="text" id="nomorKamar" name="nomorKamar" th:value="${kamar.nomorKamar}" required><br>

            <label for="jenisKamar">Jenis Kamar:</label>
            <input type="text" id="jenisKamar" name="jenisKamar" th:value="${kamar.jenisKamar}" required><br>

            <label for="kapasitas">Kapasitas:</label>
            <input type="text" id="kapasitas" name="kapasitas" th:value="${kamar.kapasitas}" required><br>

            <label for="harga">Harga:</label>
            <input type="text" id="harga" name="harga" th:value="${kamar.harga}" required><br>

            <button type="button" onclick="updateData()">Simpan Perubahan</button>
        </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        function updateData() {
            var id = 4; // This should be replaced with the actual ID

            var data = {
                id: id,
                nomorkamar: $('#nomorkamar').val(),
                jeniskamar: $('#jeniskamar').val(),
                kapasitas: $('#kapasitas').val(),
                harga: $('#harga').val()
            };

            $.ajax({
                url: 'http://localhost:8080/kamar/' + id,
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                success: function (result) {
                    // Handle success response here
                    console.log('Data updated successfully.');
                },
                error: function (error) {
                    // Handle error response here
                    console.error('Error updating data:', error);
                }
            });
        }
    </script>
